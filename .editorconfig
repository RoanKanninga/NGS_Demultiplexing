# EditorConfig is awesome: https://EditorConfig.org

# This is the top-most EditorConfig file.
root = true

# Unix-style newlines with a newline ending every file.
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset.
[*]
charset = utf-8

# Indent scripts with tabs.
[*.{bash,sh}]
indent_style = tab
